<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/moderatorDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:background="#CCCCCC">

            <ImageButton
                android:id="@+id/moderatorMenuButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/menu_icon"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal|fill_vertical"
                android:background="@null"
                android:baselineAlignBottom="true" />

            <TextView
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/moderatorMyProfileButton"
                android:text="Moj profil"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:background="@drawable/my_profile_button"
                android:textColor="@android:color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/moderatorLogoutButton"
                android:text="Odjava"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:background="@drawable/logout_button"
                android:textColor="@android:color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp" />

        </GridLayout>

        <FrameLayout
            android:id="@+id/moderator_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/moderatorNavigation"
        app:headerLayout="@layout/navigation_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/moderator_drawer"
        android:background="#000077"
        app:itemTextColor="@android:color/white" />

</android.support.v4.widget.DrawerLayout>