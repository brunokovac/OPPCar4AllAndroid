<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#a9efdc">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Korisnik:"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cancellationItemUserProfilePicture"
            android:layout_width="40dp"
            android:layout_height="70dp"/>

        <TextView
            android:id="@+id/cancellationItemUsernameField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="19dp"
            android:gravity="center" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Polazna točka:"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/cancellationItemStartingPointField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="19dp"
        android:gravity="center"
        android:textAllCaps="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Odredište:"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/cancellationItemDestinationField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="19dp"
        android:gravity="center"
        android:textAllCaps="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Datum i vrijeme:"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/cancellationItemStartingDateTimeField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="19dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Razlog otkazivanja:"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/cancellationItemCancelMessageField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="19dp"
        android:gravity="center"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <Button
            android:id="@+id/cancellationItemDismissButton"
            android:text="Odbaci"
            android:background="#f2cdcd"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/cancellationItemReviewUserButton"
            android:text="Ocijeni"
            android:background="#bbf4bf"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"/>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    </LinearLayout>

</LinearLayout>