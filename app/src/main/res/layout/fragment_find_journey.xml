<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Polazna točka:"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:textStyle="italic|bold"
        android:textSize="17dp"/>

    <EditText
        android:id="@+id/findJourneysStartingPointField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:lines="1"
        android:maxLines="1"
        android:inputType="text"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Odredište:"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:textStyle="italic|bold"
        android:textSize="17dp"/>

    <EditText
        android:id="@+id/findJourneysDestinationField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:lines="1"
        android:maxLines="1"
        android:inputType="text"
        android:layout_marginStart="5dp"/>


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Datum polaska:"
        android:textStyle="italic|bold"
        android:textSize="17dp"/>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/findJourneysStartingDateField"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textAlignment="center"
            android:focusable="false"
            android:clickable="false"
            android:longClickable="false"/>

        <Button
            android:id="@+id/findJourneysDateButton"
            android:layout_marginStart="10dp"
            android:text="Datum"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textColor="@android:color/white"
            android:background="@drawable/date_time_button"/>

    </LinearLayout>

    <Button
        android:id="@+id/findJourneysGoButton"
        android:layout_marginTop="35dp"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Pronađi putovanja"
        android:background="@drawable/find_journeys_button"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/findJourneysErrorMessage"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Sve informacije moraju biti definirane!"
        android:textColor="#770000"
        android:textStyle="italic"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/findJourneysList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="10dp"
        android:layout_marginTop="40dp">

    </ListView>

</LinearLayout>