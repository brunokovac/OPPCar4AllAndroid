<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Polazna točka:"
                android:textStyle="italic|bold"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/offeredJourneyDetailsStartingPointField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Odredište:"
                android:textStyle="italic|bold"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/offeredJourneyDetailsDestinationField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Datum i vrijeme polaska:"
                android:textStyle="italic|bold"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/offeredJourneyDetailsStartingDateTimeField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/offeredJourneyDetailsReturnTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Datum i vrijeme povratka:"
                android:textStyle="italic|bold"
                android:textSize="17dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/offeredJourneyDetailsReturnDateTimeField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Stajališta:"
                android:textStyle="italic|bold"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/offeredJourneyDetailsPassingPlacesField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/offeredJourneyDetailsNumberOfSeatsField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Broj slobodnih mjesta: "
                android:textStyle="italic|bold"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/offeredJourneyDetailsHighwayField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Autocesta: "
                android:textStyle="italic|bold"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/offeredJourneyDetailsPriceField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Cijena: "
                android:textStyle="italic|bold"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="Komentar:"
                android:textStyle="italic|bold"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/offeredJourneyDetailsCommentField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                android:textSize="17dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/offeredJourneyDetailsChatTitle"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="RAZGOVOR"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:gravity="center"/>

                <ImageButton
                    android:id="@+id/offeredJourneyDetailsChatButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/next_icon"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>