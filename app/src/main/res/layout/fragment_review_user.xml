<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginStart="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ocijeni korisnika"
        android:textSize="19dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reviewUserProfilePicture"
            android:layout_width="45dp"
            android:layout_height="65dp"/>

        <TextView
            android:id="@+id/reviewUserUsernameField"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:text="korisnik"
            android:textStyle="bold"/>

    </LinearLayout>

    <RatingBar
        android:id="@+id/reviewUserRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:numStars="5"
        android:stepSize="1"/>

    <EditText
        android:id="@+id/reviewUserCommentField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lines="5"
        android:hint="Komentar"/>

    <Button
        android:id="@+id/reviewUserSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:text="Ocijeni"
        android:textColor="@android:color/white"
        android:background="@drawable/edit_save_changes_button"/>

    <TextView
        android:id="@+id/reviewUserErrorMessage"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Barem ocjena mora biti odabrana!"
        android:textColor="#770000"
        android:textStyle="italic"
        android:visibility="gone"/>

</LinearLayout>