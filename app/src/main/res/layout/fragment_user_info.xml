<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userInfoProfilePicture"
            android:layout_width="55dp"
            android:layout_height="80dp"
            android:background="@drawable/image_not_found2"/>

        <TextView
            android:id="@+id/userInfoUsernameField"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:textStyle="italic|bold"
            android:textSize="17dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/userInfoReviewsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Recenzije"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <ListView
        android:id="@+id/userInfoReviewsList"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="7dp">

    </ListView>


</LinearLayout>