<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#d6f6f7">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Vozač:"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/requestItemDriverProfilePicture"
            android:layout_width="30dp"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/requestItemDriverUsernameField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="19dp"
            android:gravity="center" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Polazna točka:"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/requestItemStartingPointField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="19dp"
        android:gravity="center"
        android:textAllCaps="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Odredište:"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/requestItemDestinationField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="19dp"
        android:gravity="center"
        android:textAllCaps="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Datum i vrijeme:"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/requestItemStartingDateTimeField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="19dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/requestItemCancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Odustani"
        android:background="#f2cdcd"/>

</LinearLayout>